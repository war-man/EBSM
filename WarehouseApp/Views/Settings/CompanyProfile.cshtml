                                </li>*@
                            </ul>
                        </li>
                        <li>
                            <a class="collapse-link" title="Collapse"><i class="fa fa-chevron-up"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
      
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(model => model.CompanyId)
                        <div class="col-xs-6 col-sm-6 col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.CompanyName, new { @class = "control-label" })
                                @Html.TextBoxFor(model => model.CompanyName, new { @class = "form-control input-sm", placeholder = "Company Name" })
                                @Html.ValidationMessageFor(model => model.CompanyName)

                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.CompanyAddress, new { @class = "control-label" })
                                @Html.TextAreaFor(model => model.CompanyAddress, new { @class = "form-control input-sm", placeholder = "Address", @row=4 })
                                @Html.ValidationMessageFor(model => model.CompanyAddress)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Email, new { @class = "control-label" })
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control input-sm", placeholder = "Email" })
                                @Html.ValidationMessageFor(model => model.Email)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Phone, new { @class = "control-label" })
                                @Html.TextBoxFor(model => model.Phone, new { @class = "form-control input-sm", placeholder = "Phone No" })
                                @Html.ValidationMessageFor(model => model.Phone)
                            </div> 
                            </div>

                        <div class="col-xs-6 col-sm-6 col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Tin, new { @class = "control-label" })
                                @Html.TextBoxFor(model => model.Tin, new { @class = "form-control input-sm", placeholder = "TIN" })
                                @Html.ValidationMessageFor(model => model.Tin)
                            </div> <div class="form-group">
                                       @Html.LabelFor(model => model.VatRegNo, new { @class = "control-label" })
                                       @Html.TextBoxFor(model => model.VatRegNo, new { @class = "form-control input-sm", placeholder = "VAT Registration No" })
                                       @Html.ValidationMessageFor(model => model.VatRegNo)
                                   </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.WebSite, new { @class = "control-label" })
                                @Html.TextBoxFor(model => model.WebSite, new { @class = "form-control input-sm", placeholder = "Web Site" })
                                @Html.ValidationMessageFor(model => model.WebSite)
                            </div>
                            @*<div class="form-group">
                                @Html.Label("Company Logo", new { @class = "control-label" })
                                <input type="file" name="file" id="CompanyLogo" class="form-control" />
                            </div>*@


                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Save" class="btn btn-info" />
                                    &nbsp;&nbsp;@Html.ActionLink("Cancel", "Index", "Home", null, new { @class = "btn btn-default" })

                                </div>
                            </div>
                        </div>
                  
                </div>
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
