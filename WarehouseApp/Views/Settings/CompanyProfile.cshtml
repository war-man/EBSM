@model WarehouseApp.Models.CompanyProfile

@{
    ViewBag.Title = "Edit";
}


@using (Html.BeginForm("CompanyProfile", "Settings", null, FormMethod.Post, new { @id = "companyProfileForm" }))
{
    @Html.AntiForgeryToken()
    
      <div class="row">
	  	<div class="col-md-10 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2><i class="fa fa-pencil"></i> Edit Company Profile</h2>
                    <ul class="nav navbar-right panel_toolbox">

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false" title="Settings"><i class="fa fa-wrench"></i></a>
                            <ul class="dropdown-menu" role="menu">
                                @*<li>
                                    <a href='@Url.Action("Index","Customer")'>Customers</a>
                                </li>
