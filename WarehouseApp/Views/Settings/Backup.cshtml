@model dynamic

@{
    ViewBag.Title = "Backup";
   
}
<div class="row">
    <div class="col-md-10">
        <div class="panel panel-default">
            <div class="panel-heading">
                <strong><i class="fa fa-cloud-upload" aria-hidden="true"></i>  Backup </strong>
                @Html.ActionLink(" Back", null, null, null, new { href = Request.UrlReferrer, @class = "btn btn-default fa fa-arrow-circle-left  pull-right" })
                @*@Html.ActionLink(" Go to home", "Index", "Home", null, new { @class = "btn btn-default fa fa-home  pull-right" })*@
                
            </div>
            <div class="panel-body">
                <div class="col-md-12 text-center">
                    <a href='@Url.Action("SystemDbBackup", "Settings")' class="btn btn-success btn-lg"><i class="fa fa-download fa-lg"> </i> Take database backup</a>
                </div>
             
            </div>
        </div>
    </div>
</div>

