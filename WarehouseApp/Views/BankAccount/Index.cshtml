@model Tuple<List<WarehouseApp.Models.Cash>, List<WarehouseApp.Models.BankAccount>, List<WarehouseApp.Models.MobileBanking>>

@{
    ViewBag.Title = "Accounts";
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <i class="fa fa-list"></i> Cash Account
                <ul class="nav navbar-right panel_toolbox">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" title="Settings" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href='@Url.Action("WithdrawDeposit", "BankAccount")'>Witdraw or Deposit</a></li>
                        </ul>
                    </li>
                    <li>
                        <a class="collapse-link" title="Collapse"><i class="fa fa-chevron-up"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <table class="table table-striped table-condensed table-responsive jambo_table">

                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Item1.First().CashName)</th>
                            <th>@Html.DisplayNameFor(model => model.Item1.First().Balance)</th>
                            <th>@Html.DisplayNameFor(model => model.Item1.First().Status)</th>
                            <th>@Html.DisplayNameFor(model => model.Item1.First().CreatedDate)</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Item1)
                        {
                            <tr>

                                <td>@Html.DisplayFor(modelItem => item.CashName)</td>
                                <td>@string.Format("{0:n}", item.Balance)</td>
                                <td>
                                    @{
                            if (item.Status == 0)
                            {
                                @Html.DisplayName("Inactive")
                            }
                            else
                            {
                                @Html.DisplayName("Active")
                            }
                                    }

                                </td>
                                <td>@Html.DisplayFor(modelItem => item.CreatedDate)</td>

                            </tr>
                        }
                    </tbody>



                </table>
                </div></div></div>
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <i class="fa fa-list"></i> Bank Account List
                <ul class="nav navbar-right panel_toolbox">
                    <li><a href='@Url.Action("CreateBankAccount", "BankAccount")' data-id="0" class="" title="Add New"><i class="fa fa-plus-square fa-lg"></i> </a></li>

                    @*<li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" title="Settings" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href='@Url.Action("ExpenseTypeList", "Expense")'>Role Configuration</a></li>
                        </ul>
                    </li>*@
                    <li>
                        <a class="collapse-link" title="Collapse"><i class="fa fa-chevron-up"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">

                <table class="table table-striped table-condensed table-responsive jambo_table">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Item2.First().AccountName)</th>
                            <th>@Html.DisplayNameFor(model => model.Item2.First().AccountNo)</th>
                            <th>@Html.DisplayNameFor(model => model.Item2.First().BankName)</th>
                            <th>@Html.DisplayNameFor(model => model.Item2.First().Branch)</th>
                            <th>@Html.DisplayNameFor(model => model.Item2.First().Balance)</th>
                            <th>@Html.DisplayNameFor(model => model.Item2.First().Status)</th>

                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Item2)
                        {
                            <tr class="@(@item.Status==0 ? "text-muted" : " ")">
                                <td>@Html.DisplayFor(modelItem => item.AccountName)</td>
                                <td>@Html.DisplayFor(modelItem => item.AccountNo)</td>
                                <td>@Html.DisplayFor(modelItem => item.BankName)</td>
                                <td>@Html.DisplayFor(modelItem => item.Branch)</td>
                                <td>@Html.DisplayFor(modelItem => item.Balance)</td>
                                <td>
                                    @{
                                        if (item.Status != 0)
                                        {
                                            @Html.DisplayName("Enabled")

                                        }
                                        else
                                        {
                                            @Html.DisplayName("Disabled")
                                        }
                                    }

                                </td>

                                <td>
                                    @Html.ActionLink(" ", "EditBankAccount", "BankAccount", new { id = item.BankId }, new { @class = "btn btn-xs btn-primary fa fa-pencil" })


                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <i class="fa fa-list"></i> Mobile Banking Account List
                <ul class="nav navbar-right panel_toolbox">
                    <li><a href='@Url.Action("CreateMobileAccount", "BankAccount")' data-id="0" class="" title="Add New"><i class="fa fa-plus-square fa-lg"></i> </a></li>

                    @*<li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" title="Settings" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href='@Url.Action("ExpenseTypeList", "Expense")'>Role Configuration</a></li>
                        </ul>
                    </li>*@
                    <li>
                        <a class="collapse-link" title="Collapse"><i class="fa fa-chevron-up"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">

                <table class="table table-striped table-condensed table-responsive jambo_table">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Item3.First().AccountName)</th>
                            <th>@Html.DisplayNameFor(model => model.Item3.First().AccountNumber)</th>
                            <th>@Html.DisplayNameFor(model => model.Item3.First().AccountOwner)</th>
                            <th>@Html.DisplayNameFor(model => model.Item3.First().Balance)</th>
                            <th>@Html.DisplayNameFor(model => model.Item3.First().Status)</th>

                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Item3)
                        {
                            <tr class="@(@item.Status==0 ? "text-muted" : " ")">
                                <td>@Html.DisplayFor(modelItem => item.AccountName)</td>
                                <td>@Html.DisplayFor(modelItem => item.AccountNumber)</td>
                                <td>@Html.DisplayFor(modelItem => item.AccountOwner)</td>
                                <td>@Html.DisplayFor(modelItem => item.Balance)</td>
                                <td>
                                    @{
                            if (item.Status != 0)
                            {
                                @Html.DisplayName("Enabled")

                            }
                            else
                            {
                                @Html.DisplayName("Disabled")
                            }
                                    }

                                </td>

                                <td>
                                    @Html.ActionLink(" ", "EditMobileAccount", "BankAccount", new { id = item.AccountId }, new { @class = "btn btn-xs btn-primary fa fa-pencil" })

                                </td>
                            </tr>
                        }
                    </tbody>



                </table>
            </div>
        </div>
    </div>
</div>
            @section Scripts {
                <script>
                    function removeThis(obj, paramData) {
                        var url = '@Url.Action("DeleteUser", "User")';
                        deleteRow(obj, url, paramData);
                    }
                </script>
            }
