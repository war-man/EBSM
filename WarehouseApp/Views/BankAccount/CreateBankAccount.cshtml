@model EBSM.Entities.BankAccount

@{
    ViewBag.Title = "Create Bank Account";
}



@using (Html.BeginForm("CreateBankAccount", "BankAccount", null, FormMethod.Post, new { @id = "createProductForm" }))
{
    @Html.AntiForgeryToken()
    <div class="row">
		<div class="col-md-10 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2><i class="fa fa-pencil"></i> New Bank Account</h2>
                    <ul class="nav navbar-right panel_toolbox">

                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false" title="Settings"><i class="fa fa-wrench"></i></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>
                                    <a href='@Url.Action("Index","Customer")'>Customers</a>
                                </li>
                                <li>
                                    <a href='@Url.Action("Index","WarehouseZone")'>Product Transfer</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a class="collapse-link" title="Collapse"><i class="fa fa-chevron-up"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
        
                    @Html.ValidationSummary(true)
                   
                        <div class="form-group">
                            @Html.LabelFor(model => model.AccountName, new { @class = "control-label" })
                            @Html.TextBoxFor(model => model.AccountName, new { @class = "form-control input-sm", placeholder = "Account Name" })
                            @Html.ValidationMessageFor(model => model.AccountName)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.AccountNo, new { @class = "control-label" })
                            @Html.TextBoxFor(model => model.AccountNo, new { @class = "form-control input-sm", placeholder = "Account No" })
                            @Html.ValidationMessageFor(model => model.AccountNo)

                        </div>
                                              
                        <div class="form-group">
                            @Html.LabelFor(model => model.BankName, new { @class = "control-label" })
                            @Html.TextBoxFor(model => model.BankName, new { @class = "form-control input-sm", placeholder = "Bank Name" })
                            @Html.ValidationMessageFor(model => model.BankName)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Branch, new { @class = "control-label" })
                            @Html.TextBoxFor(model => model.Branch, new { @class = "form-control input-sm", placeholder = "Branch" })
                            @Html.ValidationMessageFor(model => model.Branch)
                        </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Balance, new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.Balance, new { @class = "form-control input-sm", placeholder = "Balance" })
                        @Html.ValidationMessageFor(model => model.Balance)
                    </div>
      
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-info" />
                            &nbsp;&nbsp;
                            <input type="Reset" value="Reset" class="btn btn-warning" />
                            &nbsp;&nbsp;@Html.ActionLink("Cancel", "Index", "BankAccount", null, new { @class = "btn btn-default" })

                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>

    </script>
}
