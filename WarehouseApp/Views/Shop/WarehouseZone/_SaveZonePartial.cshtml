@model EBSM.Entities.WarehouseZone



@using (Html.BeginForm("Create", "WarehouseZone", null, FormMethod.Post, new { @id = "createZoneForm" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="col-xs-12 col-sm-12 col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"><i class="fa fa-pencil"></i> New Zone </h3>
                </div>
                <div class="panel-body">
                    @Html.ValidationSummary(true)
                    <div class="col-xs-12 col-sm-12 col-md-12">

                        <div class="form-group">
                            @Html.LabelFor(model => model.ZoneName, new { @class = "control-label" })
                            @Html.TextBoxFor(model => model.ZoneName, new { @class = "form-control input-sm", placeholder = "Zone Name" })
                            @Html.ValidationMessageFor(model => model.ZoneName,null,new{@class="alert"})

                        </div>

                        <div class="form-group hidden">
                            @Html.LabelFor(model => model.WarehouseId, "Warehouse", new { @class = "control-label" })
                            @Html.DropDownList("WarehouseId", null, "--Select--", new { @class = "form-control input-sm " })
                            @Html.ValidationMessageFor(model => model.WarehouseId)
                        </div>

                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="button" value="Save" id="saveZone" class="btn btn-primary" />


                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

}

