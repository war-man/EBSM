                            </div>
                            <div class="panel-body">
                                <div class="form-horizontal">
                                    <div class="form-group">
                                        @*@Html.TextBox("ProductBarCode", null, new { @class = "form-control", placeholder = "Scan Bar Code" })*@
                                   
