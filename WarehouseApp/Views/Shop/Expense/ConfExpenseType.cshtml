@model WarehouseApp.Models.ExpenseType

@{
    ViewBag.Title = "Expense Type Configuration";
}

@using (Html.BeginForm("CreateExpenseType", "Expense", null, FormMethod.Post, new { @id = "createExpenseTypeForm" })) 
{
    @Html.AntiForgeryToken()
    <div class="row centered-form">
        <div class="col-xs-12 col-sm-10 col-md-10">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">New Expense Type </h3>
                </div>
                <div class="panel-body">

                    @Html.ValidationSummary(true)
                    <form role="form">

                        <div class="col-xs-6 col-sm-6 col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.TypeName, new { @class = "control-label" })
                                @Html.TextBoxFor(model => model.TypeName, new { @class = "form-control input-sm", placeholder = "Expense Type" })
                                @Html.ValidationMessageFor(model => model.TypeName)

                            </div>                            

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                    &nbsp;&nbsp;@Html.ActionLink("Cancel", "ExpenseTypeList", "Expense", null, new { @class = "btn btn-default" })
                                   
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
    
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
